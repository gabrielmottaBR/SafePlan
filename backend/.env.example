# SafePlan Backend - Environment Configuration
# Copy this file to .env and configure with your values

# FastAPI Server
ENVIRONMENT=development
DEBUG=True
API_TITLE=SafePlan Backend API
API_VERSION=2.0.0
API_DESCRIPTION=Monitoramento Inteligente de Sensores com IA

# Database - PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=safeplan_db
DATABASE_USER=safeplan
DATABASE_PASSWORD=your_secure_password_here

# Legacy SQLite (for migration only)
SQLITE_PATH=../safeplan.db

# PI Server Integration
PI_SERVER_URL=http://localhost:5985/PIWebAPI
PI_USERNAME=your_pi_username
PI_PASSWORD=your_pi_password
USE_PI_SERVER=false

# Security
SECRET_KEY=your-secret-key-for-jwt-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring & Alerts
TEAMS_WEBHOOK_URL=https://your-teams-webhook-url
ALERT_CHECK_INTERVAL_SECONDS=60
MAX_CONCURRENT_SENSORS=15000

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/safeplan.log

# ML Models
ML_MODEL_PATH=./models/
ANOMALY_THRESHOLD=0.85
FORECAST_WINDOW_DAYS=7
